<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="isLiked"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <FrameLayout
            android:id="@+id/profileCardContainer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toTopOf="@+id/like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.busy.looping.strike_through_view.StrikedView
            android:id="@+id/strike"
            app:avatarRadius="0"
            app:strikeUnderColor="#716060"
            app:layout_constraintTop_toBottomOf="@+id/profileCardContainer"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

<!--        <androidx.cardview.widget.CardView-->
<!--            android:visibility="visible"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="@+id/profileCardContainer"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/profileCardContainer"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:cardCornerRadius="100dp">-->

<!--            <ImageView-->
<!--                android:id="@+id/img"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="100dp"-->
<!--                android:src="@drawable/ic_launcher_foreground"-->
<!--                android:background="@drawable/ic_launcher_background"/>-->

<!--        </androidx.cardview.widget.CardView>-->

        <com.busy.looping.like_view_library.LikeView
            app:layout_constraintTop_toBottomOf="@+id/strike"
            app:liked="@{isLiked}"
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:duration="400"
            app:interpolator="AnticipateOvershoot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:repeatCount="5"
            app:scale_down="0.6"
            app:tint="#E91E63" />

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@+id/like"
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>