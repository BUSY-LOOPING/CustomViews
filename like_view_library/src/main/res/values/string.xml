<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LikeView">
        <attr name="anim_like_to_unlike" format="boolean" />
        <attr name="anim_unlike_to_like" format="boolean" />
        <!--        scale_down value between 0.0f - 1.0f-->
        <attr name="scale_down" format="float" />
        <attr name="likes" format="integer"/>
        <attr name="duration" format="integer"/>
        <attr name="repeatCount" format="float"/>
        <attr name="liked" format="boolean"/>
        <attr name="interpolator" >
            <enum name="AnticipateOvershoot" value="0"/>
            <enum name="Anticipate" value="1"/>
            <enum name="Overshoot" value="2"/>
            <enum name="Accelerate" value="3"/>
            <enum name="AccelerateDecelerate" value="4"/>
            <enum name="Bounce" value="5"/>
            <enum name="Cycle" value="6"/>
            <enum name="Decelerate" value="7"/>
            <enum name="Linear" value="8"/>
            <enum name="FastOutLinearIn" value="9"/>
            <enum name="FastOutSlowIn" value="10"/>
            <enum name="LinearOutSlowIn" value="11"/>
        </attr>
    </declare-styleable>
</resources>